:javascript
  $(document).ready(function(){
    $(document).on("click", ".open-Article", function () {
      var articleID = $(this).data('article');
      $.ajax({
          type: 'POST',
          url: "#{view_article_path()}",
          data: "articleID=" + articleID,
          success: function(data){
            var article = data[0];
            var links = data[1];
            return_title = article["title"];
            return_text = article["text"];
            return_link = article["link"];
            $('#myModalLabel').text(return_title);
            $('#modalBody').html(return_text);
            $('#modalLink').attr("href", return_link);
            $('#modalHate').attr("href", links["hate"]);
            $('#modalNoHate').attr("href", links["nohate"]);
            $('#modalDelete').attr("href", links["delete"]);
            $('#Article_modal').modal('show');

          },
          error: function(data){
            //alert(data.responseText);
            //$("#bookmarklet_chapter").prepend('<div class="alert-message error"><p>'+data.responseText+'</p></div>');
          }
          });
          
      
     });
     
  });


%div.row-fluid
  %div.span2
    = render 'admin/shared/sidebar'
  %div.span10
    %h2 Articles To Verify

    %table.table.table-striped.table-hover#article_table
      %thead
        %tr
          %th #
          %th Title
          %th Date
          %th City
          %th Country
          %th 
        %tbody
          - @articles.each do |article|
            %tr
              %td= article.id
              %td= link_to article.title, article.link
              %td= article.date.strftime('%m/%d/%y')
              -if article.locations[0].nil?
                %td
                %td
              -else
                %td= article.locations[0].name
                %td= article.locations[0].country
              %td
                %div.btn-group
                  = link_to 'Hate', admin_webscraper_action_path(:accept, article.id), :id => "edit_article_#{article.id}", :class => "btn btn-mini"
                  = link_to 'No Hate', admin_webscraper_action_path(:reject, article.id), :class => "btn btn-mini"
                  = link_to 'Delete', admin_articles_action_path(:delete, article.id), :class => "btn btn-mini btn-danger"


#Article.modal.hide.fade.in{"aria-hidden" => "true", "aria-labelledby" => "myModalHeader", :role => "dialog", :tabindex => "-1", :id => 'modal'}
  .modal-header
    %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"}
    %h3#myModalLabel Blank
  .modal-body
    %p#modalBody
      Filler
  .modal-footer
    %div.btn-group.pull-left
      = link_to 'Hate', "#", :id => "modalHate", :class => "btn"
      = link_to 'No Hate', "#", :id => "modalNoHate", :class => "btn"
    %div.btn-group.pull-right
      %button.btn{"aria-hidden" => "true", "data-dismiss" => "modal"} Close
      = link_to 'Delete', "#", :id => "modalDelete", :class => "btn btn-danger"
      = link_to 'View Original', "#", :class => "btn btn-primary", :id => "modalLink"
      
