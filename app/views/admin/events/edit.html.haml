%div.row-fluid
  %div.span3
  %div.span6
    %div.well
      %legend Event Properties
      = simple_form_for(@event, :url => admin_events_action_path(:update, @event.id), :html => { :method => :put, :class => 'form-horizontal'}) do |f|
        = f.error_notification
        .form-inputs
          = f.input :name, :input_html => { :class => "span8" }
          = f.text_area :description, :input_html => { :class => "span8" }
          = f.input :date, :input_html => { :class => "span8" }
          = f.input :longitude, :input_html => { :class => "span8" }
          = f.input :latitude, :input_html => { :class => "span8" }
          = f.input :country, :input_html => { :class => "span8" }
          = f.input :province, :input_html => { :class => "span8" }
          = f.input :city, :input_html => { :class => "span8" }
        .form-actions
          %div.btn-group
            = f.button :submit, "Update Source", :class => "btn-success"
            = f.button :submit, "Delete Source", :class => "btn-danger", :value => "Delete Source"
