%div.row-fluid
  %div.span2
    = render 'admin/shared/sidebar'
    
  %div.span7.offset1
    %h2.pagination-centered Create New Event
    %div#card
      = simple_form_for(:event, :as => :event_name, :url => admin_events_action_path(:new), :html => { :method => :put, :class => 'form-horizontal', :validate => true}) do |f|
        = f.error_notification
        .form-inputs
          = f.input :name, :input_html => { :class => "span" }
          = f.input :date, :placeholder => "mm/dd/yyyy", :input_html => { :class => "datepicker span" }
          = f.input :longitude, :input_html => { :class => "span" }
          = f.input :latitude, :input_html => { :class => "span" }
          = f.input :country, :input_html => { :class => "span" }
          = f.input :city, :input_html => { :class => "span" }
          = f.input :description, :as => :text, :input_html => { :class => "span", :rows => "10" }
          %div.btn-group.pull-right
            = f.button :submit, "Create", :class => "btn-success"
            = link_to 'Cancel', admin_events_path, :class => "btn btn-danger"

