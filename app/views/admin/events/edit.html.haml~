%div.row-fluid
  %div.span2
    = render 'admin/shared/sidebar'
  %div.span7.offset1
    %h2.pagination-centered Event Properties
    %div#card
      = simple_form_for(@event, :url => admin_events_action_path(:update, @event.id), :html => { :method => :put, :class => 'form-horizontal', :validate => true}) do |f|
        = f.error_notification
        .form-inputs
          = f.input :name, :input_html => { :class => "span" }
          = f.input :date, :placeholder => "mm/dd/yyyy", :as => :string, :input_html => { :class => "datepicker span" }
          = f.input :longitude, :input_html => { :class => "span" }
          = f.input :latitude, :input_html => { :class => "span" }
          = f.input :country, :input_html => { :class => "span" }
          = f.input :city, :placeholder => "#{@event.locations[0].name}", :input_html => { :class => "span" }
          = f.input :description, :as => :text, :input_html => { :class => "span", :rows => "10" }
          %div.btn-group.pull-right
            = f.button :submit, "Update Event", :class => "btn-success"
            = link_to 'Delete', admin_events_action_path(:delete, @event.id), :class => "btn btn-danger"

