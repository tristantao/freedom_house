%div.row-fluid
  %div.span2
    = render 'admin/shared/sidebar'
    
  %div.span5.offset2
    %div
      %h2.pagination-centered Create New User
      = simple_form_for(:user, :as => :user_name, :url => admin_users_action_path(:new), :html => { :method => :put, :class => 'form-horizontal', :validate => true}) do |f|
        #card
          = f.error_notification
          .form-inputs
            = f.input :first_name, :required => true, :input_html => { :class => "span" }
            = f.input :last_name, :required => true, :input_html => { :class => "span" }
            = f.input :email, :required => true, :autofocus => true, :input_html => { :class => "span" }
            = f.input :password, :required => true, :input_html => { :class => "span" }
            = f.input :password_confirmation, :required => true, :input_html => { :class => "span" }
            = f.input :admin, :as => :select, :input_html => { :class => "btn span" }
        
          = f.button :submit, "Create", :class => "btn btn-success pull-right"
