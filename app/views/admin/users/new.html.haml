%div.row-fluid
  %div.span2
    = render 'admin/shared/sidebar'
    
  %div.span10
    %div.well.pagination-centered
      %legend.pagination-centered Create New User
      = simple_form_for(:user, :as => :user_name, :url => admin_users_action_path(:new), :html => { :method => :put, :class => 'form-horizontal'}) do |f|
        = f.error_notification
        .form-inputs
          = f.input :first_name, :required => true, :input_html => { :class => "span6" }
          = f.input :last_name, :required => true, :input_html => { :class => "span6" }
          = f.input :email, :required => true, :autofocus => true, :input_html => { :class => "span6" }
          = f.input :password, :required => true, :input_html => { :class => "span6" }
          = f.input :password_confirmation, :required => true, :input_html => { :class => "span6" }
          = f.input :admin, :as => :select, :input_html => { :class => "btn span3" }
        .form-actions
        = f.button :submit, "Sign up"
