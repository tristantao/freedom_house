%div.row-fluid
  %div.span3
    %h2 #{@user.name}
    = image_tag 'default_user.png', :class => 'img-circle'
  %div.span3
  %div.span6
    %div.well
      %legend User Properties
      = simple_form_for(@user, :url => admin_users_action_path(:update, @user.id), :html => { :method => :put, :class => 'form-horizontal'}) do |f|
        = f.error_notification
        .form-inputs
          = f.input :first_name, :presence => true, :input_html => { :class=> "span8" }
          = f.input :last_name, :input_html => { :class => "span8" }
          = f.input :email, :input_html => { :class => "span8" }
          = f.input :admin, :as => :select, :input_html => { :class => "btn span8" }
        .form-actions
          %div.btn-group
            = f.button :submit, "Update User", :class => "btn-success"

 
%div.row-fluid
  %h3 Contributed Sources
  %div.well
    %table.table.table-striped#source_table
      %thead
        %tr
          %th #
          %th Source Name
          %th URL
      %tbody
        %tr
          %td
          %td
          %td
