    = image_tag 'default_user.png', :class => 'img-circle'
  
  %div.span6.offset3
    %div#card
      %legend.pagination-centered User Properties
      = simple_form_for(@user, :url => admin_users_action_path(:update, @user.id), :html => { :method => :put, :class => 'form-horizontal', :validate => true}) do |f|
        = f.error_notification
        .form-inputs
          = f.input :first_name, :presence => true, :input_html => { :class=> "span" }
          = f.input :last_name, :input_html => { :class => "span" }
          = f.input :email, :input_html => { :class => "span" }
          = f.input :admin, :as => :select, :input_html => { :class => "btn span" }
          %div.btn-group.pull-right
            = f.button :submit, "Update User", :class => "btn-success"
            = link_to 'Delete User', admin_users_action_path(:delete, @user.id), :class => "btn btn-danger"

 
