%div.row-fluid
  %div.span2
    = render 'admin/shared/sidebar'
  %div.span7.offset1
    %h2.pagination-centered Create New Comment
    %div#card
      = simple_form_for(:response, :as => :response_name, :url => admin_responses_action_path(@feedback.id, :action => :new), :html => { :method => :put, :class => 'form-horizontal'}) do |f|
        = f.error_notification
        .form-inputs
          = f.input :body, :as => :text, :input_html => { :class => "span" }
          %div.btn-group.pull-right
            = f.button :submit, "Create", :class => "btn-success"
            = link_to 'Cancel', admin_feedbacks_action_path(:view, @feedback.id), :class => "btn btn-danger"

