%div.row-fluid
  %div.span2
    = render 'admin/shared/sidebar'
  %div.span10
    %h2 Feedback
    %div.pull-right= button_to 'Create New Feedback', admin_feedbacks_action_path(:new), :class => "button btn"

    %h3 Active
    %table.table.table-striped.table-hover#article_table
      %thead
        %tr
          %th ID
          %th Title
          %th Author
          %th Rating
          %th Date created
          %th Date last updated
          %th by who?
      %tbody
        - @feedbacks_active.each do |feedback|
          %tr 
            %td= feedback.id
            %td= link_to feedback.title, admin_feedbacks_action_path(:view, feedback.id)
            %td= feedback.user.name
            %td= feedback.rating
            %td= feedback.created_at.strftime('%D %I:%M%p')
            %td= feedback.updated_at.strftime('%D %I:%M%p')
            %td= feedback.last_updated_user
            %td
              = link_to 'Resolve', admin_feedbacks_action_path(:resolve, feedback.id), :class => "btn btn-mini btn-success"
              = link_to 'Delete', admin_feedbacks_action_path(:delete, feedback.id), :class => "btn btn-mini btn-danger"
    
    %h3 Resolved
    %table.table.table-striped.table-hover#article_table
      %thead
        %tr
          %th ID
          %th Title
          %th Author
          %th Rating
          %th Date created
          %th Date last updated
          %th by who?
      %tbody
        - @feedbacks_resolved.each do |feedback|
          %tr 
            %td= feedback.id
            %td= link_to feedback.title, admin_feedbacks_action_path(:view, feedback.id)
            %td= feedback.user.name
            %td= feedback.rating
            %td= feedback.created_at.strftime('%D %I:%M%p')
            %td= feedback.updated_at.strftime('%D %I:%M%p')
            %td= feedback.last_updated_user
            %td
              = link_to 'Delete', admin_feedbacks_action_path(:delete, feedback.id), :class => "btn btn-mini btn-danger"


