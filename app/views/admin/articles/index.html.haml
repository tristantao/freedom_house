:javascript
  $(document).ready(function(){
    $(document).on("click", ".open-Article", function () {
      var articleID = $(this).data('article');
      $.ajax({
          type: 'POST',
          url: "#{view_article_path()}",
          data: "articleID=" + articleID,
          success: function(article){
            return_title = article["title"];
            return_text = article["text"];
            return_link = article["link"];
            $('#myModalLabel').text(return_title);
            $('#modalBody').html(return_text);
            $('#modalLink').attr("href", return_link)
            $('#Article_modal').modal('show');

          },
          error: function(data){
            //alert(data.responseText);
            //$("#bookmarklet_chapter").prepend('<div class="alert-message error"><p>'+data.responseText+'</p></div>');
          }
          });
          
      
     });
     
  });


%div.row-fluid
  %div.span2
    = render 'admin/shared/sidebar'
  %div.span10
    %h2 All Classified Articles
    %div.pull-right= button_to 'Create New Article', admin_articles_action_path(:new), :class => "button btn"

    %table.table.table-striped.table-hover#article_table
      %thead
        %tr
          %th #
          %th Title
          %th Date
          %th Location
          %th Country
          %th Hateful?
          %th 
        %tbody
          - @articles.each do |article|
            %tr
              %td= article.id
              %td
                %a{"data-toggle" => "modal", :href => "#Article", :role => "button", "class" => "open-Article", "data-article" => article.id.to_s} #{article.title}
              %td= article.date.strftime('%m/%d/%y')
              %td= @article_city[article.id]
              %td= @article_country[article.id]
              %td= article.contains_hatespeech
              %td
                %div.btn-group
                  = link_to 'Edit', admin_articles_action_path(:edit, article.id), :id => "edit_article_#{article.id}", :class => "btn btn-mini"
                  = link_to 'Delete', admin_articles_action_path(:delete, article.id), :class => "btn btn-mini btn-danger"

#Article.modal.hide.fade.in{"aria-hidden" => "true", "aria-labelledby" => "myModalHeader", :role => "dialog", :tabindex => "-1", :id => 'modal'}
  .modal-header
    %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"}
    %h3#myModalLabel Blank
  .modal-body
    %p#modalBody
      Filler
  .modal-footer
    %button.btn{"aria-hidden" => "true", "data-dismiss" => "modal"} Close
    = link_to 'View Original', "#", :class => "btn btn-primary", :id => "modalLink"
