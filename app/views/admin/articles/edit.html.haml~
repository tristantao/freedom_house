          = f.input :author, :input_html => { :class => "span" }
          = f.input :location, :placeholder => "#{@article.locations[0].name}", :input_html => { :class => "span" }
          = f.input :link, :placeholder => "ex: http://www.google.com", :input_html => { :class => "span" }
          = f.input :text, :as => :text, :input_html => { :class => "span", :rows => "10" }
          %div.btn-group.pull-right
            = f.button :submit, "Update Article", :class => "btn-success"
