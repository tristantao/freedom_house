%div.row-fluid
  %div.span2
    = render 'admin/shared/sidebar'
    
  %div.span5.offset2
    %h2.pagination-centered Create New Article
    %div#card
      = simple_form_for :article, :as => :article_name, :url => admin_articles_action_path(:new), :html => {:method => :put, :class => 'form-horizontal', :validate => true} do |f|
        = f.error_notification
        .form-inputs
          = f.input :title, :required => true, :input_html => { :class => "span" }
          = f.input :author, :required => true, :input_html => { :class => "span" }
          = f.input :date, :required => true, :input_html => { :class => "span" }
          = f.input :link, :as => "url", :required => true, :input_html => { :class => "span" }
          %div.btn-group.pull-right
            = f.button :submit, "Create", :class => "btn btn-success"
            = link_to 'Cancel', admin_articles_path, :class => "btn btn-danger"
