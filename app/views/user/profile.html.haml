%div.row-fluid
  %div.span3
    %h2 #{current_user.name}
    %ul.thumbnails
      %li.span
        %a.thumbnail{:href => home_path}
          = image_tag 'default_user.png', :class => 'img-circle'
          
  %div.span6.offset3
    %div#card
      %legend.pagination-centered User Properties
      = simple_form_for(current_user, :url => user_update_path(current_user.id), :html => { :method => :put, :class => 'form-horizontal'}) do |f|
        = f.error_notification
        .form-inputs
          = f.input :email, :required => true, :input_html => { :class => "span" }
          = f.input :password, :autocomplete => "off", :hint => "leave it blank if you don't want to change it", :required => false, :input_html => { :class => "span" }
          = f.input :password_confirmation, :required => false, :input_html => { :class => "span" }
          = f.input :current_password, :hint => "we need your current password to confirm your changes", :required => true, :input_html => { :class => "span" }
          %div.btn-group.pull-right
            = f.button :submit, "Update User", :class => "btn-success"
            = f.button :submit, "Delete User", :class => "btn-danger", :value => "Delete User"

  
%div.row-fluid
  %h3 Contributed Sources
  %div#card
    %table.table.table-striped#source_table
      %thead
        %tr
          %th #
          %th Source Name
          %th URL
      %tbody
        -@sources.each do |source|
          %tr
            %td= source.id
            %td= source.name
            %td= source.home_page
